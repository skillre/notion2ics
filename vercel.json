{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/calendar.ics",
      "dest": "/api/calendar.py"
    },
    {
      "src": "/sync",
      "dest": "/api/sync.py"
    },
    {
      "src": "/status",
      "dest": "/api/status.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/sync.py",
      "schedule": "*/30 * * * *"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11"
  }
} 